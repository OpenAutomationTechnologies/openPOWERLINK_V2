source ${OPLK_BASE_DIR}/stack/build/altera-nios2/common/directories.settings
source ${OPLK_BASE_DIR}/stack/build/altera-nios2/common/stackfiles.settings

LIB_NAME=oplkmndrv-dualprocshm

# Library sources
CFG_LIB_SOURCES="\
${KERNEL_SOURCES} \
${CTRL_KCAL_DUALPROCSHM_SOURCES} \
${ERRHND_KCAL_DUALPROCSHM_SOURCES} \
${EVENT_KCAL_DUALPROCSHM_SOURCES} \
${PDO_KCAL_DUALPROCSHM_SOURCES} \
${COMMON_SOURCES} \
${COMMON_NOOS_SOURCES} \
${CIRCBUF_DUALPROCSHM_SOURCES} \
${DLL_KCAL_CIRCBUF_SOURCES} \
${ARCH_LE_SOURCES} \
${TARGET_NIOS2_SOURCES} \
${TARGET_NIOS2_DUAL_SOURCES} \
${TARGET_NIOS2_OPENMAC_SOURCES} \
${HARDWARE_DRIVER_OPENMAC_SOURCES} \
${HARDWARE_DRIVER_OPENMAC_MN_SOURCES} \
${DUALPROCSHM_COMMON_SOURCES} \
"

CFG_LIB_CFLAGS=

if [ -z "${CFG_DRV_BUS}" ]; then
    CFG_LIB_SOURCES="\
        ${CFG_LIB_SOURCES} \
        ${DUALPROCSHM_DRIVER_SOURCES} \
        "
    CFG_LIB_CFLAGS=-D__INT_BUS__
elif [ "${CFG_DRV_BUS}" == "INT BUS" ]; then
    CFG_LIB_SOURCES="\
        ${CFG_LIB_SOURCES} \
        ${DUALPROCSHM_DRIVER_SOURCES} \
        "
    CFG_LIB_CFLAGS=-D__INT_BUS__
elif [ "${CFG_DRV_BUS}" == "PCIE" ]; then
    CFG_LIB_SOURCES="\
        ${CFG_LIB_SOURCES} \
        ${DUALPROCSHM_KERNEL_SOURCES} \
        "
    CFG_LIB_CFLAGS=-D__PCIE_BUS__
else
    echo "ERROR: ${CFG_DRV_BUS} interface for NIOS driver is not supported"
    exit 1
fi
CFG_LIB_INCLUDES="\
${OPLK_BASE_DIR}/stack/proj/generic/lib${LIB_NAME} \
${STACK_INCLUDE_DIR} \
${STACK_SOURCE_DIR} \
${ARCH_SOURCE_DIR}/altera_nios2 \
${HW_DRIVERS_DIR}/openmac/include \
${HW_DRIVERS_DIR}/openmac/src \
${CONTRIB_SOURCE_DIR}/dualprocshm/include \
"

CFG_LIB_CFLAGS="\
${CFG_LIB_CFLAGS}
${CFG_PLATFORM_CFLAGS} \
-DCONFIG_DUALPROCSHM_PCP=TRUE \
"

CFG_LIB_ARGS="\
"

CFG_LIB_OPT_LEVEL=-O2
